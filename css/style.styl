body, .label
  font-family: 'Open Sans', sans-serif;
  font-style: normal;
  font-weight: 400;

h1, h2, h3, h4, h5, .navbar-nav > li > a
  font-family: 'Roboto Condensed', sans-serif;
  font-style: normal;
  font-weight: 400;

/* Sticky footer styles
-------------------------------------------------- */
html
  position: relative;
  min-height: 100%;

body
  margin-bottom: 60px;

body > .container
  padding: 60px 15px 0;

footer
  position: absolute;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 60px;
  > .container
    padding-top 18px

/* Colors
-------------------------------------------------*/
color-primary = #3D4A5D
color-secondary = #94C53E
color-primary-lt = lighten(color-primary, 30)
color-secondary-lt = lighten(color-secondary, 30)

body
  color: #222

a
  color color-secondary
  &:hover, &:focus
    text-decoration none
    color darken(color-secondary, 10)

.label.label-default
  background-color rgb(250, 250, 250)
  color color-primary
  &:hover
    background-color color-primary
    color #FFF

.post > aside
  border-top 1px dashed rgb(240, 240, 240)
  padding-top 8px
  margin-right 0
  margin-left 0
  margin-top 8px
  > div
    &:first-child
      padding-left 0
    &:last-child
      padding-right 0

footer > .container
  color color-primary-lt
  border-top: 2px solid color-primary-lt

.navbar-default
  background-color: rgba(255, 255, 255, .97);
  border: none;
  > .container
    border-bottom 2px solid color-primary-lt
  .navbar-brand
    &, &:hover, &:focus
      color color-primary
      .small
        color: color-secondary
  .navbar-nav > li > a
    text-transform uppercase
    color color-primary-lt
    &:focus, &:hover
      color color-secondary-lt
      background-color transparent
      border-bottom 2px solid color-secondary-lt
      margin-bottom -2px
  .navbar-nav > .active > a
    &, &:focus, &:hover
      color color-secondary
      background-color transparent
      border-bottom 2px solid color-secondary
      margin-bottom -2px
      .icon
        color color-secondary

.main-content {
  > section {
    &:last-child {
      margin-bottom 60px
    }
    > h1 {
      font-size 28px
      border-bottom 1px solid color-primary-lt
      padding-bottom 8px
    }
    article {
      // border-bottom 1px solid color-primary-lt
      padding-bottom 20px
      margin-bottom 30px
      &:last-child {
        border-bottom none
        margin-bottom 0
      }
      h1 {
        f
        font-size 24px
        margin-bottom 10px
      }
      h2 {
        color: color-secondary
        margin-top 10px
        font-size 16px
      }

    }

  }
}

article.post {
  margin-bottom 50px
}

.meta {
  color color-primary-lt
  a {
    color color-primary-lt
    &:hover, &:focus {
      color color-primary
    }
  }
}

.tags {
  .label-default {
    line-height: 24px;
    padding-right: 10px;
    &:hover {
      cursor pointer
    }
  }
}

.social {
  li {
    a {
      color: color-primary-lt
      &:hover, &:focus {
        color: color-primary
        i.icon {
          &.icon-rss {
            color #d58512
          }
          &.icon-skype {
            color rgb(0, 170, 231);
          }
        }
      }

    }
  }
}

.post-flow {
  padding-right 45px
}

.sidebar {
  color: #222
  // border-left: 1px solid color-secondary-lt
  // border-top: 1px solid color-secondary-lt
  // padding-left 30px
  // padding-top 20px
  margin-top 26px
  margin-bottom 26px
  .widget {
    padding: 15px;
    margin-bottom: 8px;
    background-color: #FFF;
    border: 1px solid #CCC;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
    aside {
      margin-top 8px
    }
    .avatar {
      padding-right: 0;
      margin-bottom: 15px;
    }
  }
  h1 {
    font-size: 18px;
    margin-top: 0;
    padding-bottom: 10px;
    padding-left: 15px;
    padding-right: 15px;
    margin-left: -15px;
    margin-right: -15px;
    box-shadow: 0 1px 0px rgba(0, 0, 0, 0.1);
  }
  h2 {

    font-size: 16px
    margin-bottom 8px
  }
  h3 {
    margin-top 8px
    font-size: 14px
  }
}

img.flag {
  margin-top: -2px;
  width: 16px;
  height: 11px;
}

@media (max-width: 768px) {
  .navbar-header {
    float left
  }

  .navbar-brand {

    margin-top -4px;
    .small {
      display block;
    }
  }

  .nav.navbar-nav {
    float right
    clear none
    font-size 24px
    margin-right 0
    > li, > li.active {
      display inline-block
      > a {
        &, &:focus, &:hover {
          border-bottom none
          margin-bottom 0
        }
      }
    }
  }
}

